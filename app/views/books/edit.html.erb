<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id), class: "link-btn" %> |
<%= link_to 'Back', books_path, class: "link-btn" %>
