<h1>Books</h1>
<table>
  <colgroup>
    <col class="col1">
    <col class="col2">
    <col class="col3">
    <col class="col4">
    <col class="col5">
  </colgroup>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to 'Show', book_path(book.id), class: "link-btn" %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(book.id), class: "link-btn" %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "link-btn" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
